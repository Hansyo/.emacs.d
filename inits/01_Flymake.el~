;;----
;; frymake使用呼び出しの宣言
;;----
(require 'flycheck)

(flycheck-define-checker c/c++
												 "A C/C++ checker using g++."
												 :command ("g++" "-Wall" "-Wextra" source)
												 :error-patterns ((error line-start
																								 (file-name) ":" line ":" colum ":" "エラー: " (message)
																								 line-end)
																					(warning line-start
																									 (file-name) ":" line ":" colum ":" "警告: " (message)
																									 line-end))
												 :modes (c-mode c++-mode))

